<Ui xmlns="http://www.blizzard.com/wow/ui/" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\..\FrameXML\UI.xsd">
	<!-- frameStrata Parameters:  BACKGROUND, LOW, MEDIUM, HIGH, DIALOG, FULLSCREEN, FULLSCREEN_DIALOG, TOOLTIP  -->
	<!-- Layer level Parameters:  BACKGROUND, BORDER, ARTWORK, OVERLAY, HIGHLIGHT -->

	<!-- SUI_AncherFrame -->
	<Frame name="Classic_AnchorFrame" frameStrata="BACKGROUND" parent="SpartanUI">
		<Size>
			<AbsDimension x="1" y="1" />
		</Size>
		<Anchors>
			<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT">
				<Offset>
					<AbsDimension x="0" y="-1"/>
				</Offset>
			</Anchor>
			<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT">
				<Offset>
					<AbsDimension x="0" y="-1"/>
				</Offset>
			</Anchor>
		</Anchors>
	</Frame>

	<!-- SUI_Popup1MaskTemplate -->
	<Frame name="SUI_Popup1MaskTemplate" parent="SUI_Art_Classic" frameStrata="MEDIUM" virtual="true">
		<Size>
			<AbsDimension x="400" y="34"/>
		</Size>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentBG" file="Interface\AddOns\SpartanUI\Themes\Classic\Images\bar-popup1">
					<Size>
						<AbsDimension x="512" y="64" />
					</Size>
					<Anchors>
						<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Frame>

	<!-- SUI_Popup2MaskTemplate -->
	<Frame name="SUI_Popup2MaskTemplate" parent="SUI_Art_Classic" frameStrata="MEDIUM" virtual="true">
		<Size>
			<AbsDimension x="400" y="34"/>
		</Size>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentBG" file="Interface\AddOns\SpartanUI\Themes\Classic\Images\bar-popup2">
					<Size>
						<AbsDimension x="512" y="64" />
					</Size>
					<Anchors>
						<Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Frame>

	<Script file="Global-Framework.lua" />
	<Script file="Style.lua" />
</Ui>
